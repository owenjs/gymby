{
  "name": "gymbyui",
  "version": "0.0.0",
  "scripts": {
    "dev": "yarn dev:vite & nodemon --ext css,scss,sass --watch src/ --exec yarn run dev:lint",
    "dev:vite": "vite",
    "dev:lint": "stylelint \"src/**/*.+(css|scss|sass)\" --fix --cache",
    "build": "vite build",
    "serve": "vite preview",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"src/**/*.+(js|jsx|ts|tsx)\" --fix",
    "lint:css": "stylelint \"src/**/*.+(css|scss|sass)\" --fix",
    "test": "jest -i --watch --verbose -env=jsdom",
    "test:all": "jest -i --watchAll --verbose -env=jsdom",
    "pre-commit": "jest -o -i -env=jsdom && lint-staged"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.7",
    "@types/prop-types": "^15.7.4",
    "@types/react": "^17.0.35",
    "@types/react-dom": "^17.0.11",
    "@types/react-redux": "^7.1.20",
    "@types/react-router-dom": "^5.3.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.0.1",
    "sass": "^1.43.4",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@nabla/vite-plugin-eslint": "^1.3.4",
    "@testing-library/dom": "^8.11.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-react": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "babel-preset-react-app": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "lint-staged": "^12.0.3",
    "nodemon": "^2.0.14",
    "stylelint": "^14.0.1",
    "stylelint-config-twbs-bootstrap": "^2.2.4",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^27.0.7",
    "tsc-files": "1.1.2",
    "vite": "^2.6.4"
  },
  "resolutions": {
    "stylelint-config-twbs-bootstrap/stylelint-config-standard": "^23.0.0",
    "stylelint-config-twbs-bootstrap/stylelint-config-recommended-scss": "^5.0.1"
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|ts|tsx)": "eslint --fix",
    "src/**/*.+(ts|tsx)": "tsc-files -p tsconfig.base.json --noEmit",
    "src/**/*.+(css|scss|sass)": "stylelint --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "globalSetup": "<rootDir>/../jest-env.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMock.js",
      "^.+\\.svg$": "<rootDir>/jest/mocks/svgTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^/@/(.*)$": "<rootDir>/src/$1",
      "^/#/(.*)$": "<rootDir>/src/components/$1",
      "^/@jest-utils$": "<rootDir>/jest/utils",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app"
        ]
      }
    }
  }
}
