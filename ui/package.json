{
  "name": "gymbyui",
  "version": "0.0.0",
  "scripts": {
    "dev": "yarn dev:vite & nodemon --ext css,scss,sass --watch src/ --exec yarn run dev:lint",
    "dev:vite": "vite",
    "dev:lint": "stylelint \"src/**/*.+(css|scss|sass)\" --config \"../.stylelintrc.json\" --fix --cache --cache-location \"../.stylelintcache\"",
    "build": "vite build",
    "serve": "vite preview",
    "test": "jest -i --watch --verbose -env=jsdom",
    "test:all": "jest -i --watchAll --verbose -env=jsdom",
    "pre-commit": "jest -o -i -env=jsdom"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.6.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-redux": "^7.2.6",
    "redux": "^4.1.2",
    "sass": "^1.43.4"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@nabla/vite-plugin-eslint": "^1.3.4",
    "@testing-library/dom": "^8.11.0",
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^27.3.1",
    "babel-preset-react-app": "^10.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "jest-scss-transform": "^1.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "nodemon": "^2.0.14",
    "stylelint": "^14.0.1",
    "tailwindcss": "^2.2.19",
    "vite": "^2.6.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "globalSetup": "<rootDir>/../jest-env.js",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.scss$": "jest-scss-transform",
      "^.+\\.css$": "<rootDir>/jest/mocks/cssMock.js",
      "^.+\\.svg$": "<rootDir>/jest/mocks/svgTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^/@/(.*)$": "<rootDir>/src/$1",
      "^/@jest-utils$": "<rootDir>/jest/utils",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "react-app"
        ]
      }
    }
  }
}
