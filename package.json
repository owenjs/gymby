{
  "name": "gymby",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:owenjs/gymby.git",
  "author": "Owen Evans <owen@3sidedcube.com>",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "babel src -d dist",
    "start": "yarn run build && node dist",
    "restart": "rimraf dist && yarn run start",
    "dev": "NODE_ENV=development nodemon --exec yarn run restart",
    "lint": "yarn lint:js && yarn lint:css",
    "lint:js": "eslint \"src/**/*.js\" \"ui/src/**/*.+(js|jsx)\" --fix",
    "lint:css": "stylelint \"ui/src/**/*.+(css|scss)\" --fix",
    "test": "jest -i --watch --verbose",
    "test:all": "jest -i --watchAll  --verbose",
    "pre-commit": "jest -o -i && lint-staged"
  },
  "devDependencies": {
    "@3sidedcube/prettier-config": "^1.0.0",
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": ">=10",
    "nodemon": "^2.0.14",
    "postcss": "^8.3.11",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "stylelint": "^14.0.1",
    "stylelint-config-twbs-bootstrap": "^2.2.4",
    "supertest": "^6.1.6"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "joi": "^17.4.2",
    "joi-objectid": "^4.0.2",
    "jsonwebtoken": "^8.5.1",
    "luxon": "^2.0.2",
    "mongoose": "^6.0.12",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "resolutions": {
    "stylelint-config-twbs-bootstrap/stylelint-config-standard": "^23.0.0",
    "stylelint-config-twbs-bootstrap/stylelint-config-recommended-scss": "^5.0.1"
  },
  "prettier": "@3sidedcube/prettier-config",
  "lint-staged": {
    "*.+(js|jsx)": "eslint --cache --fix",
    "*.+(css|scss|sass)": "stylelint --cache --fix"
  }
}
